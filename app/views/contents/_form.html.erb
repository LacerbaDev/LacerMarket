<%= form_for @content, html: { multipart: true } do |f| %>
  <% if @content.errors.any? %>
    <div id="error_explanation">
      <h4><b><%= pluralize(@content.errors.count, "error") %> non permettono al form di essere inviato</b></h4>

      <ul>
      <% @content.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <label class="grey-text">Carica il contenuto digitale che vuoi vendere (formati supportati: PowerPoint, Excel, Word, PDF, immagini e MP3)</label>
    <br>
    <%= f.file_field :allegato %>
  </div>
  <br>
  <div class="field">
    <%= f.label :titolo %><br>
    <%= f.text_field :titolo %>
  </div>
  <div class="field">
    <%= f.label :descrizione %><br>
    <%= f.text_area :descrizione, class: "materialize-textarea" %>
  </div>
  <div class="field">
    <%= f.label :prezzo_min_50_cent %><br>
    <%= f.text_field :price %>
  </div>
    <div class="field">
    <label class="grey-text">Carica un'immagine da utilizzare come cover per il tuo contenuto</label>
    <br>
    <%= f.file_field :cover %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit 'Salva Contenuto', class: "btn btn-form" %>
  </div>
  <br>
<% end %>
